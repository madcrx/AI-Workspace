generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String     @id @default(cuid())
  email         String     @unique
  name          String?
  password      String?    // Optional for OAuth users
  emailVerified DateTime?
  role          String     @default("USER")
  isActive      Boolean    @default(true)
  resetToken    String?
  resetTokenExpiry DateTime?
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  workspaces    Workspace[]
  reviews       Review[]
  credentials   ToolCredential[]
  preferences   UserPreferences?
  image         String?
  accounts      Account[]
  sessions      Session[]
}

model UserPreferences {
  id            String     @id @default(cuid())
  userId        String     @unique
  user          User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  widgets       String     @default("[]")  // JSON array of widget configurations
  theme         String     @default("default")
  notes         String     @default("")    // Notepad widget content
  todos         String     @default("[]")  // Todo widget items
  workspaceZoom Int        @default(100)   // Workspace zoom level (50-150)
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Workspace {
  id            String     @id @default(cuid())
  userId        String
  user          User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  name          String     @default("My Workspace")
  layout        String     @default("grid") // grid, list, custom
  theme         String     @default("light") // light, dark, custom
  customStyles  String?    @default("{}")   // JSON for custom CSS
  isDefault     Boolean    @default(false)
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  tools         WorkspaceTool[]
}

model WorkspaceTool {
  id            String     @id @default(cuid())
  workspaceId   String
  workspace     Workspace  @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  toolId        String
  tool          Tool       @relation(fields: [toolId], references: [id], onDelete: Cascade)
  position      Int        @default(0)
  gridX         Int        @default(0)
  gridY         Int        @default(0)
  width         Int        @default(1)
  height        Int        @default(1)
  customConfig  String?    @default("{}")   // JSON for tool-specific settings
  createdAt     DateTime   @default(now())

  @@unique([workspaceId, toolId])
}

model Tool {
  id            String     @id @default(cuid())
  name          String
  slug          String     @unique
  description   String
  longDescription String?
  category      String
  subcategory   String?
  websiteUrl    String
  loginUrl      String?
  logoUrl       String?
  screenshots   String?    @default("[]")  // JSON array
  pricing       String     @default("FREE")
  pricingDetails String?
  features      String?    @default("[]")  // JSON array
  tags          String?    @default("[]")  // JSON array
  isActive      Boolean    @default(false)
  isFeatured    Boolean    @default(false)
  views         Int        @default(0)
  clicks        Int        @default(0)
  rating        Float?     @default(0)
  reviewCount   Int        @default(0)
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  lastScraped   DateTime?
  scrapedData   String?    @default("{}")  // JSON for scraped metadata
  workspaceTools WorkspaceTool[]
  reviews       Review[]
  credentials   ToolCredential[]
}

model Category {
  id            String     @id @default(cuid())
  name          String     @unique
  slug          String     @unique
  description   String?
  icon          String?
  order         Int        @default(0)
  createdAt     DateTime   @default(now())
}

model Review {
  id            String     @id @default(cuid())
  userId        String
  user          User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  toolId        String
  tool          Tool       @relation(fields: [toolId], references: [id], onDelete: Cascade)
  rating        Int        // 1-5 stars
  comment       String?
  pros          String?
  cons          String?
  isVerified    Boolean    @default(false)
  helpfulCount  Int        @default(0)
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  @@unique([userId, toolId])
}

model ToolCredential {
  id            String     @id @default(cuid())
  userId        String
  user          User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  toolId        String
  tool          Tool       @relation(fields: [toolId], references: [id], onDelete: Cascade)
  username      String
  encryptedPassword String
  encryptionIv  String
  customLoginUrl String?
  notes         String?
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  @@unique([userId, toolId])
}

model FeatureRequest {
  id          String   @id @default(cuid())
  title       String
  description String
  category    String
  useCase     String?
  priority    String   @default("MEDIUM")
  email       String?
  status      String   @default("PENDING")
  votes       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ToolUpdateRequest {
  id            String   @id @default(cuid())
  toolId        String
  updateType    String
  currentValue  String?
  newValue      String
  reason        String
  email         String?
  status        String   @default("PENDING")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model AdvertisingRequest {
  id              String   @id @default(cuid())
  companyName     String
  contactName     String
  email           String
  phone           String?
  website         String?
  advertisingType String
  budget          String
  duration        String
  targetAudience  String?
  message         String
  status          String   @default("PENDING")
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Tutorial {
  id              String   @id @default(cuid())
  title           String
  slug            String   @unique
  description     String
  content         String   // Markdown content
  category        String
  difficulty      String   @default("BEGINNER") // BEGINNER, INTERMEDIATE, ADVANCED
  youtubeVideoId  String?  // YouTube video ID
  affiliateLinks  String?  @default("[]") // JSON array of affiliate links with tracking
  toolsUsed       String?  @default("[]") // JSON array of tool IDs
  duration        Int?     // Duration in minutes
  views           Int      @default(0)
  likes           Int      @default(0)
  isPublished     Boolean  @default(true)
  isFeatured      Boolean  @default(false)
  thumbnailUrl    String?
  tags            String?  @default("[]") // JSON array
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model ScraperLog {
  id              String   @id @default(cuid())
  source          String   // Source website/API
  toolsFound      Int      @default(0)
  toolsAdded      Int      @default(0)
  toolsUpdated    Int      @default(0)
  toolsSkipped    Int      @default(0)
  errors          String?  @default("[]") // JSON array of errors
  status          String   // SUCCESS, PARTIAL, FAILED
  executionTime   Int?     // milliseconds
  triggeredBy     String   @default("CRON") // CRON, MANUAL
  createdAt       DateTime @default(now())
}
