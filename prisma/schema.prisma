generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String     @id @default(cuid())
  email         String     @unique
  name          String?
  password      String?    // Optional for OAuth users
  emailVerified DateTime?
  role          String     @default("USER")
  isActive      Boolean    @default(true)
  resetToken    String?
  resetTokenExpiry DateTime?
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  workspaces    Workspace[]
  reviews       Review[]
  credentials   ToolCredential[]
  preferences   UserPreferences?
  image         String?
  accounts      Account[]
  sessions      Session[]
}

model UserPreferences {
  id            String     @id @default(cuid())
  userId        String     @unique
  user          User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  widgets       String     @default("[]")  // JSON array of widget configurations
  theme         String     @default("default")
  notes         String     @default("")    // Notepad widget content
  todos         String     @default("[]")  // Todo widget items
  workspaceZoom Int        @default(100)   // Workspace zoom level (50-150)
  notepadHeight Int        @default(300)   // Notepad widget height in pixels
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Workspace {
  id            String     @id @default(cuid())
  userId        String
  user          User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  name          String     @default("My Workspace")
  layout        String     @default("grid") // grid, list, custom
  theme         String     @default("light") // light, dark, custom
  customStyles  String?    @default("{}")   // JSON for custom CSS
  isDefault     Boolean    @default(false)
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  tools         WorkspaceTool[]
}

model WorkspaceTool {
  id            String     @id @default(cuid())
  workspaceId   String
  workspace     Workspace  @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  toolId        String
  tool          Tool       @relation(fields: [toolId], references: [id], onDelete: Cascade)
  position      Int        @default(0)
  gridX         Int        @default(0)
  gridY         Int        @default(0)
  width         Int        @default(1)
  height        Int        @default(1)
  customConfig  String?    @default("{}")   // JSON for tool-specific settings
  createdAt     DateTime   @default(now())

  @@unique([workspaceId, toolId])
}

model Tool {
  id            String     @id @default(cuid())
  name          String
  slug          String     @unique
  description   String
  longDescription String?
  category      String
  subcategory   String?
  websiteUrl    String
  loginUrl      String?
  logoUrl       String?
  screenshots   String?    @default("[]")  // JSON array
  pricing       String     @default("FREE")
  pricingDetails String?
  features      String?    @default("[]")  // JSON array
  tags          String?    @default("[]")  // JSON array
  isActive      Boolean    @default(false)
  isFeatured    Boolean    @default(false)
  views         Int        @default(0)
  clicks        Int        @default(0)
  rating        Float?     @default(0)
  reviewCount   Int        @default(0)
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  lastScraped   DateTime?
  scrapedData   String?    @default("{}")  // JSON for scraped metadata
  workspaceTools WorkspaceTool[]
  reviews       Review[]
  credentials   ToolCredential[]
  videoClips    VideoClip[]
}

model Category {
  id            String     @id @default(cuid())
  name          String     @unique
  slug          String     @unique
  description   String?
  icon          String?
  order         Int        @default(0)
  createdAt     DateTime   @default(now())
}

model Review {
  id            String     @id @default(cuid())
  userId        String
  user          User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  toolId        String
  tool          Tool       @relation(fields: [toolId], references: [id], onDelete: Cascade)
  rating        Int        // 1-5 stars
  comment       String?
  pros          String?
  cons          String?
  isVerified    Boolean    @default(false)
  helpfulCount  Int        @default(0)
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  @@unique([userId, toolId])
}

model ToolCredential {
  id            String     @id @default(cuid())
  userId        String
  user          User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  toolId        String
  tool          Tool       @relation(fields: [toolId], references: [id], onDelete: Cascade)
  username      String
  encryptedPassword String
  encryptionIv  String
  customLoginUrl String?
  notes         String?
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  @@unique([userId, toolId])
}

model FeatureRequest {
  id          String   @id @default(cuid())
  title       String
  description String
  category    String
  useCase     String?
  priority    String   @default("MEDIUM")
  email       String?
  status      String   @default("PENDING")
  votes       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ToolUpdateRequest {
  id            String   @id @default(cuid())
  toolId        String
  updateType    String
  currentValue  String?
  newValue      String
  reason        String
  email         String?
  status        String   @default("PENDING")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model AdvertisingRequest {
  id              String   @id @default(cuid())
  companyName     String
  contactName     String
  email           String
  phone           String?
  website         String?
  advertisingType String
  budget          String
  duration        String
  targetAudience  String?
  message         String
  status          String   @default("PENDING")
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Tutorial {
  id              String   @id @default(cuid())
  title           String
  slug            String   @unique
  description     String
  content         String   // Markdown content
  category        String
  difficulty      String   @default("BEGINNER") // BEGINNER, INTERMEDIATE, ADVANCED
  youtubeVideoId  String?  // YouTube video ID
  affiliateLinks  String?  @default("[]") // JSON array of affiliate links with tracking
  toolsUsed       String?  @default("[]") // JSON array of tool IDs
  duration        Int?     // Duration in minutes
  views           Int      @default(0)
  likes           Int      @default(0)
  isPublished     Boolean  @default(true)
  isFeatured      Boolean  @default(false)
  thumbnailUrl    String?
  tags            String?  @default("[]") // JSON array
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model ScraperLog {
  id              String   @id @default(cuid())
  source          String   // Source website/API
  toolsFound      Int      @default(0)
  toolsAdded      Int      @default(0)
  toolsUpdated    Int      @default(0)
  toolsSkipped    Int      @default(0)
  errors          String?  @default("[]") // JSON array of errors
  status          String   // SUCCESS, PARTIAL, FAILED
  executionTime   Int?     // milliseconds
  triggeredBy     String   @default("CRON") // CRON, MANUAL
  createdAt       DateTime @default(now())
}

model CustomScraperUrl {
  id          String   @id @default(cuid())
  url         String   @unique
  isActive    Boolean  @default(true)
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model VideoClip {
  id              String   @id @default(cuid())
  title           String
  youtubeVideoId  String   // YouTube video ID or clip ID
  toolId          String   // Featured AI tool
  tool            Tool     @relation(fields: [toolId], references: [id], onDelete: Cascade)
  description     String?
  duration        Int?     // Duration in seconds
  thumbnailUrl    String?
  isSponsored     Boolean  @default(false)
  sponsorAmount   Float?   // Amount paid by tool for placement
  costPerClick    Float    @default(0) // Cost per click for monetization
  impressions     Int      @default(0) // Times video was shown
  clicks          Int      @default(0) // Times video was clicked
  conversions     Int      @default(0) // Times user visited tool after watching
  totalEarnings   Float    @default(0) // Total earnings from this video
  isActive        Boolean  @default(true)
  isFeatured      Boolean  @default(false)
  placement       String   @default("SIDEBAR") // SIDEBAR, HERO, INLINE, FEATURED
  startDate       DateTime?
  endDate         DateTime?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  videoClicks     VideoClick[]
}

model VideoClick {
  id              String   @id @default(cuid())
  videoClipId     String
  videoClip       VideoClip @relation(fields: [videoClipId], references: [id], onDelete: Cascade)
  userId          String?  // Null if not logged in
  ipAddress       String?
  userAgent       String?
  referrer        String?
  sessionId       String?
  watched         Boolean  @default(false) // Did they watch the video
  converted       Boolean  @default(false) // Did they click through to the tool
  watchDuration   Int?     // How long they watched in seconds
  earnedAmount    Float    @default(0) // Amount earned from this click
  createdAt       DateTime @default(now())
}

model AffiliateProgram {
  id                String   @id @default(cuid())
  name              String   // e.g., "ChatGPT Plus", "Midjourney"
  provider          String   // e.g., "OpenAI", "Midjourney Inc"
  affiliateNetwork  String?  // e.g., "Impact", "ShareASale", "Direct"
  commissionType    String   @default("PER_SALE") // PER_SALE, PER_CLICK, PERCENTAGE
  commissionRate    Float    // Percentage (e.g., 20.0 for 20%) or flat amount
  cookieDuration    Int?     // Cookie lifetime in days
  affiliateId       String?  // Your affiliate ID for this program
  apiKey            String?  // API key if available
  trackingUrl       String   // Base tracking URL template
  isActive          Boolean  @default(true)
  minimumPayout     Float?   // Minimum payout threshold
  paymentSchedule   String?  // e.g., "NET30", "Monthly"
  notes             String?
  totalClicks       Int      @default(0)
  totalConversions  Int      @default(0)
  totalEarnings     Float    @default(0)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  affiliateClicks   AffiliateClick[]
}

model AffiliateClick {
  id                String   @id @default(cuid())
  affiliateProgramId String
  affiliateProgram  AffiliateProgram @relation(fields: [affiliateProgramId], references: [id], onDelete: Cascade)
  tutorialId        String?  // Which tutorial the click came from
  userId            String?  // User who clicked (if logged in)
  ipAddress         String?
  userAgent         String?
  referrer          String?
  sessionId         String?
  clickedUrl        String   // The affiliate link that was clicked
  converted         Boolean  @default(false) // Did they complete a purchase/signup
  conversionValue   Float?   // Value of the conversion
  earnedAmount      Float    @default(0) // Commission earned
  conversionDate    DateTime?
  metadata          String?  @default("{}") // JSON for additional tracking data
  createdAt         DateTime @default(now())

  @@index([affiliateProgramId])
  @@index([tutorialId])
  @@index([sessionId])
}

model MonetizationSettings {
  id                    String   @id @default(cuid())
  // Payment Information
  paypalEmail           String?
  stripeAccountId       String?
  bankAccountNumber     String?
  bankRoutingNumber     String?
  bankAccountName       String?

  // Affiliate Network Credentials
  impactPartnerId       String?
  impactApiKey          String?
  shareasaleAffiliateId String?
  shareasaleApiToken    String?
  cjPublisherId         String?
  cjApiKey              String?

  // Custom Affiliate IDs for major platforms
  openaiAffiliateId     String?  // ChatGPT, DALL-E
  anthropicAffiliateId  String?  // Claude
  midjourneyAffiliateId String?
  elevenLabsAffiliateId String?
  jasperAffiliateId     String?

  // Revenue Goals and Thresholds
  monthlyRevenueGoal    Float?   @default(0)
  minimumPayoutAmount   Float?   @default(50)

  // Tax Information
  taxId                 String?  // EIN or SSN
  businessName          String?
  businessAddress       String?

  // Notification Settings
  notificationEmail     String?
  sendWeeklyReports     Boolean  @default(true)
  sendMonthlyReports    Boolean  @default(true)
  alertOnLargeConversion Boolean @default(true)
  largeConversionThreshold Float? @default(100)

  // Email/SMTP Configuration
  smtpHost              String?
  smtpPort              Int?     @default(587)
  smtpUsername          String?
  smtpPassword          String?
  smtpFromEmail         String?
  smtpFromName          String?
  smtpSecure            Boolean  @default(true) // Use TLS
  smtpEnabled           Boolean  @default(false)

  // OAuth Provider Credentials - Google
  googleClientId        String?
  googleClientSecret    String?
  googleRedirectUri     String?
  googleEnabled         Boolean  @default(false)

  // OAuth Provider Credentials - GitHub
  githubClientId        String?
  githubClientSecret    String?
  githubRedirectUri     String?
  githubEnabled         Boolean  @default(false)

  // OAuth Provider Credentials - Discord
  discordClientId       String?
  discordClientSecret   String?
  discordRedirectUri    String?
  discordEnabled        Boolean  @default(false)

  // OAuth Provider Credentials - Microsoft
  microsoftClientId     String?
  microsoftClientSecret String?
  microsoftRedirectUri  String?
  microsoftEnabled      Boolean  @default(false)

  // API Keys - AI Services
  openaiApiKey          String?
  anthropicApiKey       String?
  googleAiApiKey        String?
  cohereApiKey          String?
  huggingfaceApiKey     String?

  // API Keys - Analytics & Tracking
  googleAnalyticsId     String?
  mixpanelToken         String?
  segmentWriteKey       String?
  hotjarSiteId          String?
  clarityProjectId      String?

  // API Keys - Payment & Commerce
  stripePublicKey       String?
  stripeSecretKey       String?
  stripeWebhookSecret   String?
  paypalClientId        String?
  paypalClientSecret    String?
  paypalMode            String?  @default("sandbox") // sandbox or live

  // API Keys - Cloud Storage
  awsAccessKeyId        String?
  awsSecretAccessKey    String?
  awsRegion             String?
  awsS3Bucket           String?
  cloudinaryCloudName   String?
  cloudinaryApiKey      String?
  cloudinaryApiSecret   String?

  // API Keys - Communication
  twilioAccountSid      String?
  twilioAuthToken       String?
  twilioPhoneNumber     String?
  sendgridApiKey        String?
  mailgunApiKey         String?
  mailgunDomain         String?

  // API Keys - Social Media
  twitterApiKey         String?
  twitterApiSecret      String?
  twitterBearerToken    String?
  facebookAppId         String?
  facebookAppSecret     String?
  linkedinClientId      String?
  linkedinClientSecret  String?

  // API Keys - Search & SEO
  googleSearchApiKey    String?
  googleSearchEngineId  String?
  serpApiKey            String?
  semrushApiKey         String?

  // Database Configuration
  databaseUrl           String?
  redisUrl              String?
  mongodbUrl            String?

  // Application URLs
  appUrl                String?
  apiUrl                String?
  cdnUrl                String?

  // Security Settings
  jwtSecret             String?
  encryptionKey         String?
  apiRateLimit          Int?     @default(100)
  corsOrigins           String?  // JSON array of allowed origins

  // Feature Flags
  enableAiChat          Boolean  @default(false)
  enableSocialLogin     Boolean  @default(false)
  enablePayments        Boolean  @default(false)
  enableAnalytics       Boolean  @default(true)
  enableEmailNotifications Boolean @default(true)

  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
}
